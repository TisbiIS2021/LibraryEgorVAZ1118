<Page x:Class="LibApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter phone number"/>
            <TextBox x:Name="PhoneTB" Text="{Binding Phone}"/>
            <Button x:Name="LogBtn" Content="Login" IsDefault="True" Click="LogBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
