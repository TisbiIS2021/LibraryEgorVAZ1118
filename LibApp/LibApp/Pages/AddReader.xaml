<Page x:Class="LibApp.Pages.AddReader"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddReader">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Width="150">
            <TextBlock Text="FIO"/>
            <TextBox Text="{Binding FIO}"/>
            <TextBlock Text="Date of Bern"/>
            <DatePicker SelectedDate="{Binding DateOdBirth}"/>
            <TextBlock Text="Adress"/>
            <TextBox Text="{Binding Adress}"/>
            <TextBlock Text="Phone"/>
            <TextBox Text="{Binding Phone}"/>
            <Button x:Name="OkBtn" Content="Ok" Click="OkBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
